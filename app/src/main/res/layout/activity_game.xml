<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/photo_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/gamephoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pralines_gray2"
            />
        <ImageView
            android:id="@+id/completed_gamephoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pralines_faces2"
            android:alpha="0"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="165dp"
        android:id="@+id/menubar"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/darkgray"
        >

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/red"
            android:text="@string/time"
            android:textSize="50sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration"
            android:textColor="@color/lightgray"
            android:text="@string/progress"
            android:gravity="right"
            android:layout_alignRight="@id/duration"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="3dp" android:textSize="20sp"/>

        <ImageView
            android:id="@+id/puzzle_piece"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/restart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/yellow"
            android:text="@string/start"
            android:layout_centerHorizontal="true"

            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/restart_button"
            android:textSize="8sp"
            android:layout_marginBottom="50dp"
            android:text="@string/debug"
            android:gravity="center_horizontal"
            android:visibility="invisible"/>
    </RelativeLayout>



</LinearLayout>
