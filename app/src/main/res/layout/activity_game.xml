<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/photo_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/gamephoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pralines_gray"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#404040"
        >

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#ff665a"
            android:text="03:32"
            android:gravity="center_horizontal"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/duration"
            android:textColor="#c4c7cc"
            android:text="0 / 3"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/puzzle_piece"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dude_1"/>

        <TextView
            android:id="@+id/restart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#fab316"
            android:text="Restart"
            android:layout_centerHorizontal="true"

            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/restart_button"
            android:textSize="8sp"
            android:layout_marginBottom="50dp"
            android:text="debug"
            android:gravity="center_horizontal" />
    </RelativeLayout>



</LinearLayout>
